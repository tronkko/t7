# Remove files generated by CMake
set (cmake_generated
    ${CMAKE_BINARY_DIR}/CMakeCache.txt
    ${CMAKE_BINARY_DIR}/cmake_install.cmake
    ${CMAKE_BINARY_DIR}/Makefile
    ${CMAKE_BINARY_DIR}/CMakeFiles
    ${CMAKE_BINARY_DIR}/install_manifest.txt
    ${CMAKE_BINARY_DIR}/Testing
    ${CMAKE_BINARY_DIR}/inspire/CMakeCache.txt
    ${CMAKE_BINARY_DIR}/inspire/cmake_install.cmake
    ${CMAKE_BINARY_DIR}/inspire/Makefile
    ${CMAKE_BINARY_DIR}/inspire/CMakeFiles
    ${CMAKE_BINARY_DIR}/libt7/t7/config.h
    ${CMAKE_BINARY_DIR}/libt7/t7/features.h
    ${CMAKE_BINARY_DIR}/libt7/CMakeCache.txt
    ${CMAKE_BINARY_DIR}/libt7/cmake_install.cmake
    ${CMAKE_BINARY_DIR}/libt7/Makefile
    ${CMAKE_BINARY_DIR}/libt7/CMakeFiles
    ${CMAKE_BINARY_DIR}/libt7/t7.cmake
    ${CMAKE_BINARY_DIR}/libt7/DartConfiguration.tcl
    ${CMAKE_BINARY_DIR}/libt7/Testing
    ${CMAKE_BINARY_DIR}/libt7/CTestTestfile.cmake
)
foreach (file ${cmake_generated})
    if (EXISTS ${file})
        file (REMOVE_RECURSE ${file})
    endif()
endforeach (file)
